<launch>

  <!-- fetch or freight? -->
  <arg name="name" />

  <!-- set topics -->
  <arg name="map_topic" default="map" />
  <arg name="cmd_vel_topic" default="cmd_vel" />
  <arg name="odom_topic" default="odom" />

  <!-- planners, costmaps, etc -->
  <node pkg="move_base" type="move_base" name="move_base" respawn="true" output="screen">
      <param name="base_global_planner" value="carrot_planner/CarrotPlanner" />
      <rosparam file="$(find fetch_navigation)/config/no_map/costmap_common.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find fetch_navigation)/config/$(arg name)/no_map/costmap_common.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find fetch_navigation)/config/no_map/costmap_common.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find fetch_navigation)/config/$(arg name)/no_map/costmap_common.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find fetch_navigation)/config/no_map/costmap_local.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find fetch_navigation)/config/$(arg name)/no_map/costmap_local.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find fetch_navigation)/config/no_map/costmap_global.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find fetch_navigation)/config/$(arg name)/no_map/costmap_global.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find fetch_navigation)/config/no_map/move_base.yaml" command="load" />
      <rosparam file="$(find fetch_navigation)/config/$(arg name)/no_map/move_base.yaml" command="load" />
      <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
      <remap from="odom" to="$(arg odom_topic)"/>
      <remap from="map" to="$(arg map_topic)" />
  </node>

</launch>
